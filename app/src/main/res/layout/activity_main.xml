        android:textColor="#ff0000"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lstView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"/>


</LinearLayout>


